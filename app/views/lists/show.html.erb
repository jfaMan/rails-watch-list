<div>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key, crop: :fill) : image_path("default.jpg", width: 400, height: 300, crop: :fill) %>)">
    <div class="container">
      <h1><%= "Best #{@list.name}" %></h1>
      <div class="mt-4"><%= link_to "Add a movie to this list", new_list_bookmark_path(@list), class: "btn btn-banner" %></div>
    </div>
  </div>
  <div class="container mt-5">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="cards">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path bookmark.movie.poster_url, alt: "poster" %>)">
          <div>
            <%= bookmark.movie.title %>
            <%= "Rating: #{bookmark.movie.rating}" %>
          </div>
          
          <div>
            <%= link_to bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure you want to remove this movie?' } do %>
              <i class="fas fa-minus-circle"></i>
            <% end %>
          </div>
        </div>

        <div>
          <%= "Overview: #{bookmark.movie.overview}" %>
          <%= "Comment: #{bookmark.comment}" %>
        </div>

    <% end %>
    </div>
  </div>
</div>

